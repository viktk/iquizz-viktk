<%-include('partials/header')%>

        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h2 class="h1 display-4">S'inscrire sur O'Quiz</h2>
            <p class="lead">Inscrivez vous pour profiter des quizz !</p>
        </div>

        <form action="/signup" method="POST" class="form-signin">

            <%if (locals.error) {%>
                <div class="alert alert-danger">
                    <p><%=error%></p>
                </div>
            <% } %>
    
            <%if (locals.message) {%>
                <div class="alert alert-success">
                    <p><%=message%></p>
                    <p>Vous pouvez vous connecter à votre compte</p>
                    <p><a href="/login">Se connecter</a></p>

                </div>
            <% } %>

            <div class="form-label-group">
                <input type="lastname" class="form-control <%if (locals.errorField === "lastname"){%>is-invalid<%}%>" id="lastname" name="lastname"
                    aria-describedby="lastnameHelp" placeholder="Votre nom" value="<%=formData.lastname%>">
                <label for="lastname">Votre nom</label>
            </div>

            <div class="form-label-group">
                <input type="firstname" class="form-control <%if (locals.errorField === "firstname"){%>is-invalid<%}%>" id="firstname" name="firstname"
                    aria-describedby="firstnameHelp" placeholder="Votre prénom" value="<%=formData.firstname%>">
                <label for="firstname">Votre prénom</label>
            </div>

            <div class="form-label-group">
                <input type="email" class="form-control <%if (locals.errorField === "email"){%>is-invalid<%}%>" id="email" name="email" aria-describedby="emailHelp"
                    placeholder="Votre courriel" value="<%=formData.email%>">
                <label for="email">Votre courriel</label>
                <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre courriel.</small>
            </div>

            <div class="form-label-group">
                <input type="password" class="form-control <%if (locals.errorField === "password"){%>is-invalid<%}%>" id="password" name="password"
                    placeholder="Votre mot de mot de passe">
                <label for="password">Votre mot de mot de passe</label>
            </div>


            <div class="form-label-group">
                <input type="password" class="form-control <%if (locals.errorField === "passwordConfirm"){%>is-invalid<%}%>" id="passwordConfirm" name="passwordConfirm"
                    placeholder="Confirmez votre mot de passe">
                <label for="passwordConfirm">Confirmez votre mot de passe</label>
                <small id="emailHelp" class="form-text text-muted">*** <em>Tous les champs sont obligatoires</em></small>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
        </form>

<%-include('partials/footer')%>